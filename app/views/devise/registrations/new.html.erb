<div class = "form-page">
  <h2>Sign up</h2>
  <div class = "row">
    <div class = "large-centered large-8 columns">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.input :username %>
          <%= f.collection_radio_buttons :gender, [['Male', 'Male'],
          ['Female', 'Female']],:first, :last %>
          <%= f.input :age, collection: 18..80 %>
          <%= f.input :height, collection: 48..84 %>
          <%= f.input :weight, collection: 75..300 %>
          <%= f.input :activity, collection: ["Sedentary", "Low Activity", "Active", "Very Active"] %>
          <%= f.input :goal, collection: ["Lose Weight", "Maintain", "Gain Muscle"] %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Calculate" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    </div>
</div>
