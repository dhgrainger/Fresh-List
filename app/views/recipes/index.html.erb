<div class = "display" >
  <div class = "show-recipe panel clearfix">
    <h2 class= "recipe-index">Recipes: Powered by Yummly</h2>

    <% if @recipes %>
      <%= form_tag update_multiple_recipes_path, method: :patch do %>
        <div class = "body grid-container">
          <% @recipes.each do |preference|%>
            <% preference.each do |recipe| %>
              <div class = "recipe grid-3">
                <h5><a class = "recipe-tag" href = <%= recipe[:url] %> ><%= recipe[:name] %></a></h5>
                <div><img class = "index" src = <%= recipe[:image] %> alt='no image'></div>
                <ul class = "info">
                  <li>Fats: <%= recipe[:fats].round(0) %> grams</li>
                  <li>Protein: <%= recipe[:protein].round(0) %> grams</li>
                  <li>Carbs: <%= recipe[:carbs].round(0) %> grams</li>
                  <li><%= check_box_tag "ids[]", recipe.id %><%= label_tag("add to cart") %></li>
                </ul>
              </div>
            <% end %>
          <% end %>
      <div class = "row"
        <div class = "large-centered large-8 columns">
        <%= submit_tag "Keep Recipes", class: "button submit-recipes" %>
      </div>
    </div>
      <% end %>
    <% end %>
  </div>
</div>
